<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kamil Kiełczewski PWI</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="../../Stylesheets/semantic.css">
    <script src="../../Scripts/Form.js"></script>
</head>

<body>

    <div class="ui yellow inverted menu">
        <div class="item">
            @Html.ActionLink(KamilKielczewski.Resources.Home.Main, "Main", "Home")
        </div>
        <div class="item">
            @Html.ActionLink(KamilKielczewski.Resources.Home.Form, "Form", "Home")
        </div>
        <div class="item">
            @Html.ActionLink(KamilKielczewski.Resources.Home.Language, "Language", "Home")
        </div>
    </div>


    @RenderBody()


    <div style="background-color: #FBBD08; margin-bottom:0px; margin-top:30px" class="ui footer basic segment">
        <div class="ui container">
            <p>©2018 Kamil Kiełczewski.</p>
            <p>@Html.Raw(KamilKielczewski.Resources.Home.Trademark)</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
